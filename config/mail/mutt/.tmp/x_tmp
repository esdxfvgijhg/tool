alias me aghilesdjoudi  $my_account0
alias me djaghiles   $my_account1
alias me inseec   $my_account2


folder-hook =inbox  'set status_format  = "[inbox]  %>  %u unread %m total %p postponed"'
folder-hook =all    'set status_format  = "[all]    %>  %u unread %m total %p postponed"'
folder-hook =drafts 'set status_format  = "[drafts] %>  %m total"'
folder-hook =sent   'set status_format  = "[sent]   %>  %m total"'
folder-hook =trash  'set status_format  = "[trash]  %>  %m total"'

folder-hook '$my_account0' 'source $my_path/accounts/$my_account0'

folder-hook neomutt 'lua chgdir("~/.maildirs/somewhere/neomutt", true)'
folder-hook notmuch 'lua chgdir("~/.maildirs/somewhere/notmuch", false)'

folder-hook . 'set record="^"'

folder-hook vfio 'lua chgdir("~/.maildirs/somewhere/vfio", true)'

tag-transforms "attachment" "@" "encrypted"  "" "signed"     "✎" "neomutt-users" "users" "neomutt-devel" "devel" "github-issues" "gh"


